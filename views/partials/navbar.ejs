<!-- navbar -->
<div class="w-full h-20 bg-gray flex items-center justify-between px-6">
  <!-- logo -->
  <div>
    <a href="/">
      <h2 class="font-bold text-3xl">
        Commerce
        <span class="bg-[#f84525] text-white px-2 rounded-md">Node</span>
      </h2>
    </a>
  </div>

  <!-- search bar -->
  <div class="relative text-gray-600">
    <input
      type="search"
      name="search"
      placeholder="Search"
      class="bg-white w-96 h-10 px-5 pr-10 rounded-full text-sm focus:outline-none shadow"
    />
    <button type="submit" class="absolute right-0 top-0 mt-3 mr-4">
      <svg
        class="h-4 w-4 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 56.966 56.966"
      >
        <path
          d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23 s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92 c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17 s-17-7.626-17-17S14.61,6,23.984,6z"
        />
      </svg>
    </button>
  </div>

  <!-- account details -->
  <div class="relative">
    <div class="flex justify-between items-center gap-4">
      <% if (!user) { %>
        <a href="/auth/login">Giriş yapın</a>
      <% } else { %>
        <a href="/auth/market"><%= user.name %></a>
        <% } %>
      <div
        class="bg-gray-500 rounded-full cursor-pointer"
        onclick="toggleMenu()"
      >
        <i class="p-2 text-white fa-solid fa-user"></i>
      </div>
    </div>
    <ul
      class="absolute top-16 right-3 bg-white border w-36 rounded-lg shadow hidden z-50"
      id="dropdown-menu"
    >
      <li class="w-full p-2 hover:bg-gray-200 cursor-pointer relative">
        <a href="/auth/market" class="flex items-center justify-between">
          <span>Sepet</span>
          <div class="relative">
            <i class="fa-solid fa-basket-shopping p-2"></i>
            <% if (user) { %>
              <span class="w-4 h-4 bg-[#f84525] absolute -top-1 -right-1 text-white flex items-center justify-center rounded-full text-sm"><%= user.orders.length %></span>
            <% } %>
          </div>
        </a>
      </li>
      <li class="w-full flex justify-between items-center p-2 hover:bg-gray-200 cursor-pointer">
        <a href="/auth/settings" class="flex justify-between items-center w-full">
          <span>Ayarlar</span>
          <i class="fa-solid fa-gear p-2"></i>
        </a>
      </li>
      <% if (user) { %>
        <li class="w-full flex justify-between items-center p-2 hover:bg-gray-200 cursor-pointer">
          <form action="/auth/logout" method="POST" class="w-full">
            <button type="submit" class="flex justify-between items-center w-full bg-transparent border-0 p-0">
              <span>Çıkış Yap</span>
              <i class="fa-solid fa-right-from-bracket p-2"></i>
            </button>
          </form>
        </li>
      <% } %>
    </ul>
  </div>
</div>

<script>
  function toggleMenu() {
    const menu = document.getElementById('dropdown-menu');
    menu.classList.toggle("hidden");
  }
</script>
